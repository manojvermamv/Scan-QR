<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="menuVisible"
            type="Boolean" />

        <variable
            name="actionBarTitle"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_lay_actionbar"
        style="@style/CardViewBottomCornersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:cardElevation="@dimen/material_card_elevation">

        <RelativeLayout
            android:id="@+id/lay_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/backcoloractionbar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/thirtyseven"
                android:layout_height="@dimen/thirtyseven"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/seven"
                android:layout_marginTop="@dimen/seven"
                android:layout_marginEnd="@dimen/seven"
                android:layout_marginBottom="@dimen/seven"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="@dimen/three"
                android:src="@drawable/ic_back_arrow_round_24"
                app:tint="@color/actionbarimagetintcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/seven"
                android:layout_toStartOf="@+id/lay_actionmenu"
                android:layout_toEndOf="@+id/img_back"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/two">

                <View
                    android:layout_width="@dimen/one"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/two"
                    android:layout_marginBottom="@dimen/two"
                    android:background="@color/dividercolor" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:letterSpacing="0.1"
                    android:text='@{actionBarTitle, default="@string/app_name"}'
                    android:textColor="@color/fontcoloractionbar"
                    android:textSize="@dimen/ts_twentytwo"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lay_actionmenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="@dimen/thirtyseven"
                    android:layout_height="@dimen/thirtyseven"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/seven"
                    android:background="?actionBarItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/five"
                    android:src="@drawable/ic_more_vert_round_24"
                    android:visibility="@{menuVisible ? View.VISIBLE : View.GONE, default=gone}"
                    app:tint="@color/actionbarimagetintcolor" />

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>