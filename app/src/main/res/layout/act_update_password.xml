<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.scwang.wave.MultiWaveHeader
                android:id="@+id/waveHeader"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:rotation="180"
                android:scaleY="-1"
                app:mwhCloseColor="@color/mwhCloseColor"
                app:mwhColorAlpha="0.65"
                app:mwhCornerRadius="50dp"
                app:mwhGradientAngle="270"
                app:mwhIsRunning="true"
                app:mwhProgress="1"
                app:mwhStartColor="@color/mwhStartColor"
                app:mwhVelocity="2"
                app:mwhWaveHeight="60dp"
                app:mwhWaves="MultiWave" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/lay_header"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/img_back"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/back_button_large"
                                android:padding="8dp"
                                android:src="@drawable/ic_back_arrow_round_24"
                                app:tint="@color/black" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lay_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/img_logo"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/app_logo"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_toEndOf="@+id/img_logo"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_appname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/app_name"
                                    android:textColor="@color/fontcolortextview"
                                    android:textSize="28sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tv_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:textColor="@color/fontcolortextview"
                                    android:textSize="16sp"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lay_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lay_newpass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/thirty"
                            android:paddingTop="@dimen/ten"
                            android:paddingEnd="@dimen/thirty"
                            android:paddingBottom="@dimen/ten">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_ed_newpass"
                                style="@style/TextInputLayout.OutlinedBox.Transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="New Password"
                                app:endIconMode="password_toggle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_newpass"
                                    style="@style/Custom.EditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_ed_confirm_newpass"
                                style="@style/TextInputLayout.OutlinedBox.Transparent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Confirm New Password"
                                app:endIconMode="password_toggle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_confirm_newpass"
                                    style="@style/Custom.EditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_submit"
                            style="@style/LoginButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/thirty"
                            android:layout_marginTop="@dimen/twenty"
                            android:layout_marginEnd="@dimen/thirty"
                            android:layout_marginBottom="@dimen/five"
                            android:text="Submit" />

                        <LinearLayout
                            android:id="@+id/lay_skip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/thirty"
                            android:paddingTop="@dimen/ten"
                            android:paddingEnd="@dimen/thirty"
                            android:paddingBottom="@dimen/thirty">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:background="@color/dividercolor" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/ten"
                                    android:gravity="center"
                                    android:text="OR"
                                    android:textColor="@color/fontcolortextviewgray"
                                    android:textSize="13sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.5"
                                    android:background="@color/dividercolor" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/btn_skip"
                                style="@style/LoginButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginTop="@dimen/ten"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:text="SKIP" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

        <!--bottom sheet container-->
        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/bottom_sheet_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>