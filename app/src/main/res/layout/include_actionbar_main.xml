<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_lay_actionbar"
        style="@style/CardViewBottomCornersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/material_card_elevation">

        <RelativeLayout
            android:id="@+id/lay_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:background="@color/backcoloractionbar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/forty"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/seven"
                android:layout_marginTop="@dimen/seven"
                android:layout_marginEnd="@dimen/seven"
                android:layout_marginBottom="@dimen/seven"
                android:background="?attr/actionBarItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/four"
                android:src="@drawable/ic_menu_round_24"
                app:tint="@color/actionbarimagetintcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/seven"
                android:layout_toStartOf="@+id/img_scanqr"
                android:layout_toEndOf="@+id/img_menu"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/two">

                <View
                    android:layout_width="@dimen/one"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/two"
                    android:layout_marginBottom="@dimen/two"
                    android:background="@color/dividercolor" />

                <RelativeLayout
                    android:id="@+id/lay_client_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/seven"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_client_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/fontcoloractionbar"
                        android:textSize="@dimen/ts_nineteen" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_scanqr"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/forty"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/seven"
                android:layout_marginTop="@dimen/seven"
                android:layout_marginEnd="@dimen/seven"
                android:layout_marginBottom="@dimen/seven"
                android:background="?attr/actionBarItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/five"
                android:src="@drawable/ic_round_qr_code_scanner_24"
                app:tint="@color/actionbarimagetintcolor" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>