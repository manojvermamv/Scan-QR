<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_not_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/not_found_animation"
            android:layout_width="@dimen/twohundred"
            android:layout_height="@dimen/twohundred"
            android:gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/search_not_found"
            app:lottie_repeatMode="restart"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/not_found_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven"
            android:gravity="center"
            android:text="@string/no_results"
            android:textColor="@color/fontcolortextview"
            android:textSize="@dimen/ts_twenty" />

    </LinearLayout>

</RelativeLayout>