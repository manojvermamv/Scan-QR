<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/drawer_back_lightcolor"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="@dimen/ten">

    <RelativeLayout
        android:id="@+id/lay_drawer_client"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_view"
        android:orientation="vertical"
        android:padding="@dimen/twenty">

        <ImageView
            android:id="@+id/menuheader_dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/menuheader_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuheader_dp"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/twelve"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/drawer_fontcolortv"
            android:textSize="@dimen/ts_nineteen"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginEnd="@dimen/twenty"
        android:background="@color/dividercolor"
        android:visibility="visible" />

</RelativeLayout>